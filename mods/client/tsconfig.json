{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@shared": ["../shared/src"],
      "@shared/*": ["../shared/src/*"],
      "@networking": ["../networking/src"],
      "@networking/*": ["../networking/src/*"],
      "@serialization": ["../serialization/src"],
      "@serialization/*": ["../serialization/src/*"],
      "@sync": ["../sync/src"],
      "@sync/*": ["../sync/src/*"]
    }
  },
  "references": [{ "path": "../shared" }, { "path": "../networking" }, { "path": "../serialization" }, { "path": "../sync" }],
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ]
}
