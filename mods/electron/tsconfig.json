{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@client": ["../client/src"],
      "@client/*": ["../client/src/*"],
      "@core": ["../core/src"],
      "@core/*": ["../core/src/*"],
      "@shared": ["../shared/src"],
      "@shared/*": ["../shared/src/*"],
    }
  },
  "references": [
    { "path": "../client" },
    { "path": "../core" },
    { "path": "../shared" },
  ],
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "svelte/*",
    "./src/**/*.test.ts",
  ]
}